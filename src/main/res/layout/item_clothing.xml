<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivClothingImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/default_clothing" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/tvClothingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clothing Name" />

        <TextView
            android:id="@+id/tvClothingType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clothing Type" />

        <TextView
            android:id="@+id/tvClothingColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clothing Color" />
    </LinearLayout>

</LinearLayout>
