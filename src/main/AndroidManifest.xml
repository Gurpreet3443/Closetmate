<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.closetmate">

    <application
        android:allowBackup="true"
        android:label="ClosetMate"
        android:supportsRtl="true"
        android:theme="@style/Theme.ClosetMate">
        <activity
            android:name=".DBHelper"
            android:exported="false" />
        <activity
            android:name=".Clothing"
            android:exported="false" />
        <activity android:name=".WardrobeActivity" />
        <activity android:name=".AddClothingActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>